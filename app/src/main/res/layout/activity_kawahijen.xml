<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E6E1"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imagekawahijen"
        android:layout_width="439dp"
        android:layout_height="305dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagekawahijen" />

    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:src="@drawable/iconback" />

    <TextView
        android:id="@+id/kawahijen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="310dp"
        android:fontFamily="@font/poppinsExtraBold"
        android:text="Kawah Ijen"
        android:textColor="#727A53"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/subtitleWisata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="340dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Banyuwangi, Jawa Timur"
        android:textColor="#727A53"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/sekilasText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitleWisata"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/poppins_SemiBold"
        android:text="Sekilas"
        android:textColor="#727A53"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/descriptionWisata"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/sekilasText"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/poppinsregular"
        android:justificationMode="inter_word"
        android:text="Kawah Ijen terkenal dengan fenomena api biru (blue fire) yang langka dan memukau. Kawah ini merupakan gunung berapi aktif yang memiliki danau kawah dengan air yang sangat asam. Selain fenomena blue fire, Kawah Ijen juga dikenal sebagai tempat penambangan belerang yang unik, di mana para penambang membawa belerang dengan beban berat di pundak mereka."
        android:textColor="#727A53"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/activitiesInfo"
        android:layout_width="376dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/descriptionWisata"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:fontFamily="@font/poppinsregular"
        android:justificationMode="inter_word"
        android:text="Aktivitas : Menyaksikan fenomena blue fire pada dini hari. Mendaki menuju kawah untuk melihat danau kawah yang indah. Melihat aktivitas penambangan belerang tradisional. Menikmati pemandangan dari puncak kawah. Berfoto dengan latar belakang kawah yang luar biasa.\n\nTiket Masuk : Sekitar Rp 20.000 - Rp 30.000 per orang, namun harga bisa lebih tinggi untuk tur guide atau sunrise tour."
        android:textColor="#727A53"
        android:textSize="12sp" />

</RelativeLayout>
